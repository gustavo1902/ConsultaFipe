FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY ["FipeApi.csproj", "."]
RUN dotnet restore "./FipeApi.csproj"

COPY . .
RUN dotnet publish "FipeApi.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
COPY --from=build /app/publish .

EXPOSE 8080

ENTRYPOINT ["dotnet", "FipeApi.dll"]
